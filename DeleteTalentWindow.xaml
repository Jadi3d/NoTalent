<Window x:Class="NoTalent.DeleteTalentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Talent" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Talent ID"/>
            <TextBox Name="TalentIDTextBox" Width="300" Height="25" Margin="5"/>
            <Button Content="Delete" Width="100" Height="30" Margin="5" HorizontalAlignment="Center" Click="DeleteTalentButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
