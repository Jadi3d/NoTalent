<Window x:Class="NoTalent.TalentManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Talent Management" Height="200" Width="600">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Create" Width="100" Height="30" Margin="10" Click="CreateButton_Click"/>
            <Button Content="Retrieve" Width="100" Height="30" Margin="10" Click="RetrieveButton_Click"/>
            <Button Content="Update" Width="100" Height="30" Margin="10" Click="UpdateButton_Click"/>
            <Button Content="Delete" Width="100" Height="30" Margin="10" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
