<Window x:Class="NoTalent.RetrieveTalentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Retrieve Talent" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Talent ID"/>
            <TextBox Name="TalentIDTextBox" Width="300" Height="25" Margin="5"/>
            <Button Content="Retrieve" Width="100" Height="30" Margin="5" HorizontalAlignment="Center" Click="RetrieveTalentButton_Click"/>
            <TextBlock Name="ResultTextBlock" Width="300" Height="200" Margin="5" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
